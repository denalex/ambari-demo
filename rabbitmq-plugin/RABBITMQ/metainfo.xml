<?xml version="1.0"?>
<metainfo>
  <schemaVersion>2.0</schemaVersion>
  <services>
    <service>
      <name>RABBITMQ</name>
      <displayName>RabbitMQ</displayName>
      <comment>Robust messaging for applications</comment>
      <version>3.1.5</version>
      <components>
        <component>
          <name>RABBITMQ_SERVER</name>
          <displayName>RabbitMQ Server</displayName>
          <category>MASTER</category>
          <cardinality>1+</cardinality>
          <commandScript>
            <script>scripts/rabbitmq_server.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
        </component>
      </components>
      <osSpecifics>
        <osSpecific>
          <osFamily>redhat5,redhat6,suse11</osFamily>
          <packages>
            <package>
              <name>rabbitmq-server*</name>
            </package>
          </packages>
        </osSpecific>
      </osSpecifics>
      <commandScript>
        <script>scripts/service_check.py</script>
        <scriptType>PYTHON</scriptType>
        <timeout>300</timeout>
      </commandScript>
    </service>
  </services>
</metainfo>
